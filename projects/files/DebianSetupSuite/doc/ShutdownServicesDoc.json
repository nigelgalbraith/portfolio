  "EXAMPLE": {
    "<MODEL_ID>": {
      "ShutdownServices": {
        "backup-on-shutdown": {
          "Order": 10,
          "Name": "backup-on-shutdown",
          "ScriptSrc": "settings/services/backup-on-shutdown.sh",
          "ScriptDest": "/usr/local/bin/backup-on-shutdown.sh",
          "ServiceSrc": "settings/services/backup-on-shutdown.service",
          "ServiceDest": "/etc/systemd/system/backup-on-shutdown.service",
          "LogPath": "/var/log/backup-on-shutdown.log",
          "ConfigSrc": "",
          "ConfigDest": ""
        },
        "cleanup-temp-on-shutdown": {
          "Order": 20,
          "Name": "cleanup-temp-on-shutdown",
          "ScriptSrc": "settings/services/cleanup-temp.sh",
          "ScriptDest": "/usr/local/bin/cleanup-temp.sh",
          "ServiceSrc": "settings/services/cleanup-temp.service",
          "ServiceDest": "/etc/systemd/system/cleanup-temp.service",
          "LogPath": "/var/log/cleanup-temp.log",
          "ConfigSrc": "",
          "ConfigDest": ""
        }
      }
    }
  },
  "DESCRIPTION": {
    "<MODEL_ID>.ShutdownServices.<VALUES>": "A shutdown service job executed during system shutdown.",
    "<MODEL_ID>.ShutdownServices.<VALUES>.Order.<VALUES>": "Execution ordering number (lower runs first).",
    "<MODEL_ID>.ShutdownServices.<VALUES>.Name.<VALUES>": "Service name identifier.",
    "<MODEL_ID>.ShutdownServices.<VALUES>.ScriptSrc.<VALUES>": "Source script path in your repo/project.",
    "<MODEL_ID>.ShutdownServices.<VALUES>.ScriptDest.<VALUES>": "Destination path where the script will be installed.",
