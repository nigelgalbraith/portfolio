    "<MODEL_ID>.ShutdownServices.<VALUES>.ServiceDest.<VALUES>": "Destination systemd unit path.",
    "<MODEL_ID>.ShutdownServices.<VALUES>.LogPath.<VALUES>": "Where the service/script should write logs.",
    "<MODEL_ID>.ShutdownServices.<VALUES>.ConfigSrc.<VALUES>": "Optional config source path (blank if none).",
    "<MODEL_ID>.ShutdownServices.<VALUES>.ConfigDest.<VALUES>": "Optional config destination path (blank if none)."
  }
