{
  "Default": {
    "Archive": {
      "Example1": {
        "DownloadURL": "https://example.com/apps/tool1.zip",
        "ExtractTo": "~/apps/tool1",
        "CheckPath": "~/apps/tool1/bin/tool1",
        "StripTopLevel": true,
        "PostInstall": [
          "chmod +x ~/apps/tool1/bin/tool1",
          "ln -s ~/apps/tool1/bin/tool1 ~/bin/tool1"
        ],
        "PostUninstall": [
          "echo 'Tool1 uninstalled successfully'"
        ],
        "TrashPaths": [
          "~/apps/tool1",
          "~/bin/tool1"
        ],
        "DownloadPath": "/tmp/archive_downloads/tool1",
        "EnableService": []
      },
      "Example2": {
        "DownloadURL": "https://example.com/games/game2.tar.gz",
        "ExtractTo": "~/games/game2",
        "CheckPath": "~/games/game2/start.sh",
        "StripTopLevel": false,
        "PostInstall": [
          "chmod +x ~/games/game2/start.sh"
        ],
        "PostUninstall": [
          "echo 'Game2 removed from system'"
        ],
        "TrashPaths": [
          "~/games/game2"
        ],
        "DownloadPath": "/tmp/archive_downloads/game2",
        "EnableService": []
      }
    }
  }
}
