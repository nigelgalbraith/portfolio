{
  "Default": {
    "Arcade": {
      "mame": {
        "Packages": ["mame", "mame-data", "mame-tools"],
        "SetupCmds": [
          "/usr/games/mame -listxml > ~/Arcade/mame.xml"
        ],
        "ResetCmds": [
          "rm -f ~/.mame/*.ini",
          "mkdir -p ~/.mame",
          "bash -lc 'cd ~/.mame && /usr/games/mame -createconfig'"
        ],
        "SettingsFiles": [
          { "copyName": "MainConfig",   "src": "settings/mame/mame_template.ini",   "dest": "~/.mame/mame.ini" },
          { "copyName": "UIConfig",     "src": "settings/mame/ui_template.ini",     "dest": "~/.mame/ui.ini" },
          { "copyName": "PluginConfig", "src": "settings/mame/plugin_template.ini", "dest": "~/.mame/plugin.ini" }
        ],
        "PatternJobs": [
          {
            "patternName": "ArtPathUpdate",
            "filepath": "~/.mame/mame.ini",
            "pattern": "^artpath.*$",
            "new_line_list": [
              "artpath $HOME/mame/artwork",
              "/usr/local/share/games/mame/artwork",
              "/usr/share/games/mame/artwork",
              "$HOME/Arcade/MAME/artwork",
              "$HOME/Arcade/Neo Geo/artwork"
            ]
          },
          {
            "patternName": "UIDir_Cabinets",
            "filepath": "~/.mame/ui.ini",
            "pattern": "^cabinets_directory.*$",
            "new_line_list": [
              "cabinets_directory cabinets",
              "cabdevs",
              "$HOME/Arcade/MAME/cabinets"
            ]
          },
          {
            "patternName": "UIDir_CPanels",
            "filepath": "~/.mame/ui.ini",
            "pattern": "^cpanels_directory.*$",
            "new_line_list": [
              "cpanels_directory cpanel",
              "$HOME/Arcade/MAME/control panels"
            ]
          },
          {
            "patternName": "UIDir_Flyers",
            "filepath": "~/.mame/ui.ini",
            "pattern": "^flyers_directory.*$",
            "new_line_list": [
              "flyers_directory flyers",
              "$HOME/Arcade/MAME/flyers"
            ]
          },
          {
            "patternName": "UIDir_Icons",
            "filepath": "~/.mame/ui.ini",
            "pattern": "^icons_directory.*$",
            "new_line_list": [
              "icons_directory icons",
              "$HOME/Arcade/MAME/icons"
            ]
          },
          {
            "patternName": "UIDir_Marquees",
            "filepath": "~/.mame/ui.ini",
            "pattern": "^marquees_directory.*$",
            "new_line_list": [
              "marquees_directory marquees",
              "$HOME/Arcade/MAME/marquees"
            ]
          },
          {
            "patternName": "RomPath_SemicolonFix",
            "filepath": "~/.mame/mame.ini",
            "pattern": "^rompath.*$",
            "new_line_list": [
              "rompath $HOME/mame/roms",
              "/usr/local/share/games/mame/roms",
              "/usr/share/games/mame/roms",
              "$HOME/Arcade/MAME/roms",
              "$HOME/Arcade/Neo Geo/roms"
            ]
          },
          {
            "patternName": "UIDir_Titles",
            "filepath": "~/.mame/ui.ini",
            "pattern": "^titles_directory.*$",
            "new_line_list": [
              "titles_directory titles",
              "$HOME/Arcade/MAME/titles"
            ]
          },
          {
            "patternName": "SamplePathUpdate",
            "filepath": "~/.mame/mame.ini",
            "pattern": "^samplepath.*$",
            "new_line_list": [
              "samplepath $HOME/mame/samples",
              "/usr/local/share/games/mame/samples",
              "/usr/share/games/mame/samples",
              "$HOME/Arcade/MAME/samples"
            ]
          }

        ]
      },
      "retroarch": {
        "Packages": [
          "retroarch",
          "libretro-nestopia",
          "libretro-snes9x",
          "libretro-mgba",
          "libretro-gambatte",
          "libretro-desmume",
          "libretro-beetle-psx",
          "libretro-beetle-pce-fast",
          "libretro-beetle-vb",
          "libretro-beetle-wswan",
          "libretro-bsnes-mercury-accuracy",
          "libretro-bsnes-mercury-balanced",
          "libretro-bsnes-mercury-performance",
          "libretro-genesisplusgx",
          "libretro-core-info"
        ],
        "SetupCmds": [
          "retroarch --version"
        ],
        "ResetCmds": [
          "rm -f ~/.config/retroarch/retroarch.cfg",
          "mkdir -p ~/.config/retroarch/cores ~/.config/retroarch/saves ~/.config/retroarch/states ~/.config/retroarch/system"
        ],
        "SettingsFiles": [],
        "PatternJobs": []
      }
    }
  }
}

