{
  "Default": {
    "Arcade": {
      "mame": {
        "Packages": ["mame", "mame-data", "mame-tools"],
        "SetupDirs": [
          "~/.mame",
          "~/Arcade"
        ],
        "SetupCmds": [
          "/usr/games/mame -listxml > ~/Arcade/mame.xml && echo \"mame.xml export completed!\""
        ],
        "RemovePaths": [
          "~/.mame/*.ini"
        ],
        "ResetDirs": [
          "~/.mame"
        ],
        "ResetCmds": [
          "bash -lc 'cd ~/.mame && /usr/games/mame -createconfig'"
        ],
        "SettingsFiles": [
          { "copyName": "MainConfig",   "src": "settings/mame/Default/Default-mame_template.ini",   "dest": "~/.mame/mame.ini" },
          { "copyName": "UIConfig",     "src": "settings/mame/Default/Default-ui_template.ini",     "dest": "~/.mame/ui.ini" },
          { "copyName": "PluginConfig", "src": "settings/mame/Default/Default-plugin_template.ini", "dest": "~/.mame/plugin.ini" }
        ],
        "SettingsFolders" :[]
      },
      "retroarch": {
        "Packages": [
          "retroarch",
          "libretro-core-info",
          "libretro-nestopia",
          "libretro-snes9x",
          "libretro-genesisplusgx",
          "libretro-beetle-psx",
          "libretro-mgba",
          "libretro-gambatte",
          "libretro-desmume",
          "libretro-beetle-pce-fast",
          "libretro-beetle-vb",
          "libretro-beetle-wswan",
          "libretro-bsnes-mercury-accuracy",
          "libretro-bsnes-mercury-balanced",
          "libretro-bsnes-mercury-performance"
        ],
        "SetupDirs": [
          "~/.config/retroarch",
          "~/.config/retroarch/system",
          "~/.config/retroarch/system/pcsx2/bios",
          "~/.config/retroarch/cores",
          "~/.config/retroarch/saves",
          "~/.config/retroarch/states",
          "~/.config/retroarch/playlists"
        ],
        "SetupCmds": [
          "bash -lc 'python3 settings/retroarch/generate_playlists.py --core-map Default/Default-CoreMap.json'"
        ],
        "RemovePaths": [
          "~/.config/retroarch/retroarch.cfg",
          "~/.config/retroarch/playlists/*.lpl"
        ],
        "ResetDirs": [
          "~/.config/retroarch"
        ],
        "ResetCmds": [],

        "SettingsFiles": [],
        "SettingsFolders": [
          { "copyName": "PSX BIOS folder", "src": "~/Arcade/Sony Playstation/bios", "dest": "~/.config/retroarch/system" },
          { "copyName": "PS2 BIOS folder", "src": "~/Arcade/Sony Playstation 2/bios", "dest": "~/.config/retroarch/system/pcsx2/bios" }
        ]
      }
    }
  }
}
