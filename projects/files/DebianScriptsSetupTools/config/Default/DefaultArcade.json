{
  "Default": {
    "Arcade": {
      "mame": {
        "Packages": ["mame", "mame-data", "mame-tools"],
        "SetupDirs": [
          "/etc/mame",
          "/var/lib/arcade",
          "/var/lib/arcade/mame",
          "/var/lib/arcade/mame/cfg",
          "/var/lib/arcade/mame/nvram",
          "/var/lib/arcade/mame/inp",
          "/var/lib/arcade/mame/sta",
          "/var/lib/arcade/mame/snap",
          "/var/lib/arcade/mame/diff",
          "/var/lib/arcade/mame/comments"
        ],
        "SetupCmds": [
          "/usr/games/mame -listxml > /var/lib/arcade/mame.xml && echo \"mame.xml export completed!\""
        ],
        "ChmodPaths": [
          { "path": "/usr/share/arcade", "mode": "2755", "recursive": true },
          { "path": "/var/lib/arcade/retroarch", "mode": "2775", "recursive": true }
        ],
        "ChownUser": "nigel",
        "ChownGroup": "arcade",
        "ChownRecursive": true,
        "ChownPaths": [
          { "path": "/var/lib/arcade" },
          { "path": "/var/lib/arcade/mame" }
        ],
        "RemovePaths": [
          "/etc/mame/*.ini"
        ],
        "ResetDirs": ["/etc/mame"],
        "ResetCmds": [
          "bash -lc 'cd /etc/mame && /usr/games/mame -createconfig'"
        ],
        "SettingsFiles": [
          {
            "copyName": "MainConfig",
            "src": "settings/mame/Desktop/Desktop-mame_template.ini",
            "dest": "/etc/mame/mame.ini"
          },
          {
            "copyName": "UIConfig",
            "src": "settings/mame/Desktop/Desktop-ui_template.ini",
            "dest": "/etc/mame/ui.ini"
          },
          {
            "copyName": "PluginConfig",
            "src": "settings/mame/Desktop/Desktop-plugin_template.ini",
            "dest": "/etc/mame/plugin.ini"
          }
        ],
        "SettingsFolders": [],
        "arcadeUsers": ["nigel"],
        "arcadeGroups": ["arcade"],
        "ProtectedFolders": [
          {
            "path": "/usr/share/arcade",
            "owner": "root",
            "group": "root",
            "permissions": "755"
          }
        ]
      },

      "retroarch": {
        "Packages": [
          "retroarch",
          "libretro-core-info",
          "libretro-beetle-psx",
          "libretro-mgba",
          "libretro-gambatte",
          "libretro-desmume",
          "libretro-beetle-pce-fast",
          "libretro-beetle-vb",
          "libretro-beetle-wswan",
          "libretro-bsnes-mercury-accuracy",
          "libretro-bsnes-mercury-balanced",
          "libretro-bsnes-mercury-performance"
        ],
        "SetupDirs": [
          "/etc/retroarch",
          "/var/lib/arcade/retroarch",
          "/var/lib/arcade/retroarch/saves",
          "/var/lib/arcade/retroarch/states",
          "/var/lib/arcade/retroarch/playlists"
        ],

        "SetupScripts": [
          {
            "script": "settings/retroarch/generate_playlists.py",
            "args": ["--core-map", "MediaCentre/MediaCentre-CoreMap.json"]
          },
          {
            "script": "settings/retroarch/install_retroarch_launcher.sh",
            "args": []
          },
          {
            "script": "settings/controllers/install_xbox_controller.sh",
            "args": []
          }
        ],

        "SetupCmds": [],


        "ChmodPaths": [
          { "path": "/usr/share/arcade", "mode": "2755", "recursive": true },
          { "path": "/var/lib/arcade/retroarch", "mode": "2775", "recursive": true }
        ],
        "ChownUser": "nigel",
        "ChownGroup": "arcade",
        "ChownRecursive": true,
        "ChownPaths": [
          { "path": "/var/lib/arcade/retroarch" }
        ],
        "RemovePaths": [
          "/etc/retroarch/retroarch.cfg",
          "/var/lib/arcade/retroarch/playlists/*.lpl",
          "/home/*/.config/retroarch/retroarch.cfg"
        ],
        "ResetDirs": ["/etc/retroarch"],
        "ResetCmds": [
          "bash -lc 'bash settings/retroarch/uninstall_retroarch_launcher.sh'"
        ],
        "SettingsFiles": [
          {
            "copyName": "RetroArchConfig",
            "src": "settings/retroarch/Desktop/Desktop-template-retroarch.cfg",
            "dest": "/etc/retroarch/retroarch.cfg"
          }
        ],
        "SettingsFolders": [
          {
            "copyName": "PSX BIOS folder",
            "src": "/usr/share/arcade/Sony Playstation/bios",
            "dest": "/etc/retroarch/system"
          },
          {
            "copyName": "PS2 BIOS folder",
            "src": "/usr/share/arcade/Sony Playstation 2/bios",
            "dest": "/etc/retroarch/system/pcsx2/bios"
          }
        ],
        "arcadeUsers": ["nigel"],
        "arcadeGroups": ["arcade"],
        "ProtectedFolders": [
          {
            "path": "/usr/share/arcade",
            "owner": "root",
            "group": "root",
            "permissions": "755"
          }
        ]
      }
    }
  }
}
