{
  "Default": {
    "Arcade": {
      "mame": {
        "Packages": ["mame", "mame-data", "mame-tools"],
        "SetupCmds": [
          "/usr/games/mame -listxml > ~/Arcade/mame.xml && echo \"mame.xml export completed!\""
        ],
        "RemovePaths": [
          "~/.mame/*.ini"
        ],
        "ResetCmds": [
          "mkdir -p ~/.mame",
          "bash -lc 'cd ~/.mame && /usr/games/mame -createconfig'"
        ],
        "SettingsFiles": [
          { "copyName": "MainConfig", "src": "settings/mame/mame_template.ini", "dest": "~/.mame/mame.ini" },
          { "copyName": "UIConfig", "src": "settings/mame/ui_template.ini", "dest": "~/.mame/ui.ini" },
          { "copyName": "PluginConfig", "src": "settings/mame/plugin_template.ini", "dest": "~/.mame/plugin.ini" }
        ],
        "PatternJobs": [
          { "patternName": "ArtPathUpdate", "filepath": "settings/mame/mame_template.ini", "pattern": "^artpath.*$", "sep": ";", 
            "new_line_list": [
              "artpath $HOME/mame/artwork", 
              "/usr/local/share/games/mame/artwork", 
              "/usr/share/games/mame/artwork", 
              "$HOME/Arcade/MAME/artwork", 
              "$HOME/Arcade/Neo Geo/artwork"
            ] 
          },
          { "patternName": "RomPath_SemicolonFix", "filepath": "settings/mame/mame_template.ini", "pattern": "^rompath.*$", "sep": ";", 
            "new_line_list": [
              "rompath $HOME/mame/roms", 
              "/usr/local/share/games/mame/roms", 
              "/usr/share/games/mame/roms", 
              "$HOME/Arcade/MAME/roms", 
              "$HOME/Arcade/Neo Geo/roms"
            ] 
          },
          { "patternName": "SamplePathUpdate", "filepath": "settings/mame/mame_template.ini", "pattern": "^samplepath.*$", "sep": ";", 
            "new_line_list": [
              "samplepath $HOME/mame/samples", 
              "/usr/local/share/games/mame/samples", 
              "/usr/share/games/mame/samples", 
              "$HOME/Arcade/MAME/samples"
            ] 
          },
          { "patternName": "UIDir_Cabinets", "filepath": "settings/mame/ui_template.ini", "pattern": "^cabinets_directory.*$", "sep": ";", 
            "new_line_list": ["cabinets_directory cabinets", "cabdevs", "$HOME/Arcade/MAME/cabinets"]
          },
          { "patternName": "UIDir_CPanels", "filepath": "settings/mame/ui_template.ini", "pattern": "^cpanels_directory.*$", "sep": ";", 
            "new_line_list": [ "cpanels_directory cpanel", "$HOME/Arcade/MAME/control panels"] 
          },
          { "patternName": "UIDir_Flyers", "filepath": "settings/mame/ui_template.ini", "pattern": "^flyers_directory.*$", "sep": ";", 
            "new_line_list": ["flyers_directory flyers", "$HOME/Arcade/MAME/flyers"] 
          },
          { "patternName": "UIDir_Icons", "filepath": "settings/mame/ui_template.ini", "pattern": "^icons_directory.*$", "sep": ";", 
            "new_line_list": ["icons_directory icons", "$HOME/Arcade/MAME/icons"] 
          },
          { "patternName": "UIDir_Marquees", "filepath": "settings/mame/ui_template.ini", "pattern": "^marquees_directory.*$", "sep": ";", 
            "new_line_list": ["marquees_directory marquees", "$HOME/Arcade/MAME/marquees"] 
          },
          { "patternName": "UIDir_Titles", "filepath": "settings/mame/ui_template.ini", "pattern": "^titles_directory.*$", "sep": ";", 
            "new_line_list": ["titles_directory titles", "$HOME/Arcade/MAME/titles"] 
          }
        ]
      },
      "retroarch": {
        "Packages": [
          "retroarch",
          "libretro-core-info",
          "libretro-nestopia",
          "libretro-snes9x",
          "libretro-genesisplusgx",
          "libretro-beetle-psx",
          "libretro-mgba",
          "libretro-gambatte",
          "libretro-desmume",
          "libretro-beetle-pce-fast",
          "libretro-beetle-vb",
          "libretro-beetle-wswan",
          "libretro-bsnes-mercury-accuracy",
          "libretro-bsnes-mercury-balanced",
          "libretro-bsnes-mercury-performance"
        ],
        "SetupCmds": [
          "bash -lc 'mkdir -p ~/.config/retroarch/system ~/.config/retroarch/system/pcsx2/bios'",
          "bash -lc 'python3 settings/retroarch/generate_playlists.py'"
        ],
        "RemovePaths": [
          "~/.config/retroarch/retroarch.cfg",
          "~/.config/retroarch/playlists/*.lpl"
        ],
        "ResetCmds": [
          "mkdir -p ~/.config/retroarch/cores ~/.config/retroarch/saves ~/.config/retroarch/states ~/.config/retroarch/system ~/.config/retroarch/playlists"
        ],
        "SettingsFiles": [
          { "copyName": "PSX BIOS scph1001.bin", "src": "~/Arcade/Sony Playstation/bios/scph1001.bin", "dest": "~/.config/retroarch/system/scph1001.bin" },
          { "copyName": "PSX BIOS scph5502.bin", "src": "~/Arcade/Sony Playstation/bios/scph5502.bin", "dest": "~/.config/retroarch/system/scph5502.bin" },
          { "copyName": "PS2 BIOS scph39001.bin", "src": "~/Arcade/Sony Playstation 2/bios/scph39001.bin", "dest": "~/.config/retroarch/system/pcsx2/bios/scph39001.bin" },
          { "copyName": "PS2 BIOS SCPH-70004_BIOS_V12_PAL_200.BIN", "src": "~/Arcade/Sony Playstation 2/bios/SCPH-70004_BIOS_V12_PAL_200.BIN", "dest": "~/.config/retroarch/system/pcsx2/bios/SCPH-70004_BIOS_V12_PAL_200.BIN" }
        ],
        "PatternJobs": [
          {
            "patternName": "SetCoreMapFile",
            "filepath": "settings/retroarch/core_map.json",
            "pattern": "(?s)^.*$",
            "sep": "\n",
            "new_line_list": [
              "{",
              "  \"cores\": [",
              "    \"https://buildbot.libretro.com/nightly/linux/x86_64/latest/fbneo_libretro.so.zip\",",
              "    \"https://buildbot.libretro.com/nightly/linux/x86_64/latest/mame_libretro.so.zip\",",
              "    \"https://buildbot.libretro.com/nightly/linux/x86_64/latest/parallel_n64_libretro.so.zip\",",
              "    \"https://buildbot.libretro.com/nightly/linux/x86_64/latest/pcsx2_libretro.so.zip\",",
              "    \"https://buildbot.libretro.com/nightly/linux/x86_64/latest/pcsx_rearmed_libretro.so.zip\"",
              "  ],",
              "  \"core_map\": [",
              "    { \"system\": \"MAME\", \"core\": \"mame_libretro.so\", \"name\": \"MAME\", \"db\": \"MAME\", \"roms\": \"~/Arcade/MAME/roms\" },",
              "    { \"system\": \"Neo Geo\", \"core\": \"fbneo_libretro.so\", \"name\": \"Arcade (FBNeo)\", \"db\": \"FBNeo - Arcade Games\", \"roms\": \"~/Arcade/Neo Geo/roms\" },",
              "    { \"system\": \"Nintendo Entertainment System\", \"core\": \"nestopia_libretro.so\", \"name\": \"Nintendo (Nestopia)\", \"db\": \"Nintendo - Nintendo Entertainment System\", \"roms\": \"~/Arcade/Nintendo Entertainment System/roms\" },",
              "    { \"system\": \"Super Nintendo Entertainment System\", \"core\": \"snes9x_libretro.so\", \"name\": \"SNES (Snes9x)\", \"db\": \"Nintendo - Super Nintendo Entertainment System\", \"roms\": \"~/Arcade/Super Nintendo Entertainment System/roms\" },",
              "    { \"system\": \"Mega Drive\", \"core\": \"genesis_plus_gx_libretro.so\", \"name\": \"Sega (Genesis Plus GX)\", \"db\": \"Sega - Mega Drive - Genesis\", \"roms\": \"~/Arcade/Mega Drive/roms\" },",
              "    { \"system\": \"Master System\", \"core\": \"genesis_plus_gx_libretro.so\", \"name\": \"Sega (Genesis Plus GX)\", \"db\": \"Sega - Master System - Mark III\", \"roms\": \"~/Arcade/Master System/roms\" },",
              "    { \"system\": \"Sega32x\", \"core\": \"picodrive_libretro.so\", \"name\": \"Sega 32X (PicoDrive)\", \"db\": \"Sega - 32X\", \"roms\": \"~/Arcade/Sega32x/roms\" },",
              "    { \"system\": \"Nintendo 64\", \"core\": \"parallel_n64_libretro.so\", \"name\": \"Nintendo 64 (Mupen64Plus-Next)\", \"db\": \"Nintendo - Nintendo 64\", \"roms\": \"~/Arcade/Nintendo 64/roms\" },",
              "    { \"system\": \"Sony Playstation\", \"core\": \"pcsx_rearmed_libretro.so\", \"name\": \"Sony - PlayStation (Rearmed PSX)\", \"db\": \"Sony - PlayStation\", \"roms\": \"~/Arcade/Sony Playstation/roms\" },",
              "    { \"system\": \"Sony Playstation 2\", \"core\": \"pcsx2_libretro.so\", \"name\": \"Sony - PlayStation 2 (PCSX2)\", \"db\": \"Sony - PlayStation 2\", \"roms\": \"~/Arcade/Sony Playstation 2/roms\" }",
              "  ]",
              "}"
            ]
          }
        ]
      }
    }
  }
}
