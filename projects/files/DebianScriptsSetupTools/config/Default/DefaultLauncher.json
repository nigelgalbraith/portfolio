{
  "Default": {
    "Launcher": {
      "flex-launcher": {
        "DownloadURL": "https://github.com/complexlogic/flex-launcher/releases/download/v2.2/flex-launcher_2.2_amd64.deb",
        "EnableService": false,
        "download_dir": "/tmp/launcher-downloads",

        "SettingsFolders": [],
        "SettingsFiles": [
          { "copyName": "FlexINI (system-wide)", "src": "settings/flex/Default/Default-Flex-Template-config.ini", "dest": "/etc/flex-launcher/config.ini" }
        ],
        "RemovePaths": [
          "/etc/flex-launcher/*.ini"
        ],

        "SetupDirs": [
          "/home/launcher/.config",
          "/home/launcher/.config/openbox",
          "/home/launcher/.config/flex-launcher",
          "/etc/flex-launcher",
          "/etc/lightdm/lightdm.conf.d"
        ],
        "KioskFiles": [
          { "copyName": "LightDM autologin", "src": "settings/flex/Default/Default-LightDM-50-launcher.conf", "dest": "/etc/lightdm/lightdm.conf.d/50-launcher.conf" },
          { "copyName": "Openbox autostart", "src": "settings/flex/Default/Default-Flex-autostart.sh",          "dest": "/home/launcher/.config/openbox/autostart" },
          { "copyName": "DMRC",              "src": "settings/flex/Default/Default-Flex-dmrc",                  "dest": "/home/launcher/.dmrc" }
        ],

        "ChmodPaths": [
          { "path": "/home/launcher/.config/openbox/autostart", "mode": "755" },
          { "path": "/home/launcher/.dmrc",                     "mode": "644" }
        ],
        "ChownUser": "launcher",
        "ChownPaths": [
          { "path": "/home/launcher" },
          { "path": "/home/launcher/.dmrc" },
          { "path": "/home/launcher/.config" },
          { "path": "/home/launcher/.cache" }
        ],
        "ChownRecursive": true,

        "UserGroups": ["audio", "video", "arcade"],
        "DefaultDM": "sddm",
        "KioskDM":   "lightdm",

        "AdditionalPackages": [
          "chromium",
          "dbus-user-session",
          "dbus-x11",
          "lightdm-gtk-greeter"
        ]
      }
    }
  }
}
