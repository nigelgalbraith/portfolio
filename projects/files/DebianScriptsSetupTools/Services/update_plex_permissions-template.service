[Unit]
Description=Update Plex Media Drive Permissions
After=network.target

[Service]
Type=oneshot
ExecStart=/usr/local/bin/update_plex_permissions.sh
StandardOutput=append:/var/log/update_plex_permissions.log
StandardError=append:/var/log/update_plex_permissions.log
RemainAfterExit=true
User=root
Group=root

[Install]
WantedBy=multi-user.target
